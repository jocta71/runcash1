{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": "vite",
  "routes": [
    { 
      "src": "/sounds/(.*)", 
      "dest": "/sounds/$1" 
    },
    { 
      "src": "/api/asaas-webhook", 
      "dest": "/api/asaas-webhook.js" 
    },
    { 
      "src": "/api/asaas-create-customer", 
      "dest": "/api/asaas-create-customer.js" 
    },
    { 
      "src": "/api/asaas-create-subscription", 
      "dest": "/api/asaas-create-subscription.js" 
    },
    {
      "src": "/api/((?!asaas-webhook|asaas-create-customer|asaas-create-subscription).*)",
      "dest": "https://backendapi-production-36b5.up.railway.app/api/$1"
    },
    {
      "src": "/historico/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|ico|json|svg|mp3))",
      "dest": "/$1"
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "ASAAS_API_KEY": "@asaas_api_key"
  }
}
