{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": "vite",
  "routes": [
    { "src": "/api/asaas-create-customer", "dest": "/backend/api/payment/asaas-create-customer.js" },
    { "src": "/api/asaas-create-subscription", "dest": "/backend/api/payment/asaas-create-subscription.js" },
    { "src": "/api/asaas-webhook", "dest": "/backend/api/payment/asaas-webhook.js" }
  ],
  "rewrites": [
    { 
      "source": "/api/asaas-webhook", 
      "destination": "/api/asaas-webhook" 
    },
    { 
      "source": "/api/((?!asaas-webhook).*)", 
      "destination": "https://backendapi-production-36b5.up.railway.app/api/$1" 
    },
    {
      "source": "/historico/(.*)",
      "destination": "/index.html"
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html"
    }
  ],
  "cleanUrls": true,
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@mongodb_uri",
    "MONGODB_DATABASE": "runcash",
    "ASAAS_API_KEY": "@asaas_api_key",
    "ASAAS_ENVIRONMENT": "sandbox"
  }
}
