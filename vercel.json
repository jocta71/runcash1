{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": "vite",
  "rewrites": [
    { 
      "source": "/api/test", 
      "destination": "/api/test" 
    },
    { 
      "source": "/api/hubla-test", 
      "destination": "/api/hubla-test" 
    },
    { 
      "source": "/api/asaas-webhook", 
      "destination": "/api/asaas-webhook" 
    },
    { 
      "source": "/api/asaas-create-customer", 
      "destination": "/api/asaas-create-customer" 
    },
    { 
      "source": "/api/asaas-create-subscription", 
      "destination": "/api/asaas-create-subscription" 
    },
    { 
      "source": "/api/hubla-create-customer", 
      "destination": "/api/hubla-create-customer" 
    },
    { 
      "source": "/api/hubla-create-subscription", 
      "destination": "/api/hubla-create-subscription" 
    },
    { 
      "source": "/api/hubla-webhook", 
      "destination": "/api/hubla-webhook" 
    },
    { 
      "source": "/api/hubla-subscription-details", 
      "destination": "/api/hubla-subscription-details" 
    },
    { 
      "source": "/api/hubla-cancel-subscription", 
      "destination": "/api/hubla-cancel-subscription" 
    },
    { 
      "source": "/api/((?!test|hubla-test|asaas-webhook|asaas-create-customer|asaas-create-subscription|hubla-create-customer|hubla-create-subscription|hubla-webhook|hubla-subscription-details|hubla-cancel-subscription).*)", 
      "destination": "https://backendapi-production-36b5.up.railway.app/api/$1" 
    },
    {
      "source": "/historico/(.*)",
      "destination": "/index.html"
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "ASAAS_API_KEY": "@asaas_api_key",
    "HUBLA_API_KEY": "@hubla_api_key"
  }
}
