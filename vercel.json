{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": "vite",
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "https://backendscraper-production.up.railway.app/api/$1" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_WS_URL": "https://backendscraper-production.up.railway.app",
    "VITE_SSE_SERVER_URL": "https://backendscraper-production.up.railway.app/api/events",
    "VITE_API_URL": "https://backendscraper-production.up.railway.app/api"
  }
}
