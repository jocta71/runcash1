{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/next" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/proxy-roulette", "dest": "/api/proxy-roulette.js" },
    { "src": "/api/proxy-roulette/(.*)", "dest": "/api/proxy-roulette.js" },
    { "src": "/api/ROULETTES", "dest": "/api/proxy-roulette.js" },
    { "src": "/api/ROULETTES/(.*)", "dest": "/api/proxy-roulette.js" },
    { "src": "/api/ROULETTES-numbers", "dest": "/api/proxy-roulette.js?type=numbers" },
    { "src": "/api/ROULETTES-numbers/(.*)", "dest": "/api/proxy-roulette.js?type=numbers" },
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/(.*)", "dest": "/api/proxy.js" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "env": {
    "VITE_WEBSOCKET_URL": "wss://backend-production-2f96.up.railway.app",
    "VITE_SSE_SERVER": "https://backend-production-2f96.up.railway.app/sse",
    "VITE_API_BASE": "https://backend-production-2f96.up.railway.app",
    "VITE_BACKEND_URL": "https://backend-production-2f96.up.railway.app"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ]
}
