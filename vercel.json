{
  "installCommand": "cd frontend && npm install",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "functions": {
    "api/asaas-webhook.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/asaas-create-customer.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/asaas-create-subscription.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/asaas-cancel-subscription.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/payments-history.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/subscription-update-payment.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/subscription-change-plan.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/asaas-webhook", "destination": "/api/asaas-webhook.js" },
    { "source": "/api/asaas-create-customer", "destination": "/api/asaas-create-customer.js" },
    { "source": "/api/asaas-create-subscription", "destination": "/api/asaas-create-subscription.js" },
    { "source": "/api/asaas-cancel-subscription", "destination": "/api/asaas-cancel-subscription.js" },
    { "source": "/api/payments-history", "destination": "/api/payments-history.js" },
    { "source": "/api/subscription-update-payment", "destination": "/api/subscription-update-payment.js" },
    { "source": "/api/subscription-change-plan", "destination": "/api/subscription-change-plan.js" },
    { "source": "/historico/(.*)", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "cleanUrls": true,
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "mongodb+srv://username:password@your-mongodb-uri/database",
    "ASAAS_API_KEY": "your-asaas-api-key",
    "ASAAS_ENVIRONMENT": "sandbox"
  }
}
