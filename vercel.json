{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": "vite",
  "functions": {
    "api/router.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/router" 
    },
    {
      "src": "/historico/(.*)",
      "dest": "/index.html"
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
