{
  "version": 2,
  "public": true,
  "buildCommand": false,
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { 
      "source": "/api/asaas-webhook", 
      "destination": "https://backendapi-production-36b5.up.railway.app/api/payment/asaas/webhook" 
    },
    { 
      "source": "/api/asaas-create-customer", 
      "destination": "https://backendapi-production-36b5.up.railway.app/api/payment/asaas/create-customer" 
    },
    { 
      "source": "/api/asaas-create-subscription", 
      "destination": "https://backendapi-production-36b5.up.railway.app/api/payment/asaas/create-subscription" 
    },
    { 
      "source": "/api/((?!asaas-webhook|asaas-create-customer|asaas-create-subscription).*)", 
      "destination": "https://backendapi-production-36b5.up.railway.app/api/$1" 
    },
    {
      "source": "/historico/(.*)",
      "destination": "/index.html"
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html"
    }
  ],
  "cleanUrls": true,
  "env": {
    "NODE_ENV": "production",
    "VITE_API_BASE_URL": "https://backendapi-production-36b5.up.railway.app/api",
    "VITE_WS_URL": "https://backend-production-2f96.up.railway.app",
    "FRONTEND_URL": "https://runcashh11.vercel.app"
  }
}
