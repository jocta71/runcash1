{
  "installCommand": "cd frontend && npm install",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "functions": {
    "api/asaas-create-customer.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/asaas-create-subscription.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/asaas-webhook.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/asaas-pix-qrcode.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/users/login", "destination": "/api/users/login.js" },
    { "source": "/api/users/signup", "destination": "/api/users/signup.js" },
    { "source": "/api/plans", "destination": "/api/plans.js" },
    { "source": "/api/plans/:id", "destination": "/api/plans.js" },
    { "source": "/api/asaas-webhook", "destination": "/api/asaas-webhook.js" },
    { "source": "/api/asaas-create-customer", "destination": "/api/asaas-create-customer.js" },
    { "source": "/api/asaas-create-subscription", "destination": "/api/asaas-create-subscription.js" },
    { "source": "/api/asaas-pix-qrcode", "destination": "/api/asaas-pix-qrcode.js" },
    { "source": "/historico/(.*)", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "cleanUrls": true,
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "mongodb+srv://bortoluzzidev:zC4bq8Z48C6JtZ6T@cluster0.rwerrqj.mongodb.net",
    "ASAAS_API_KEY": "$ASAAS_API_KEY"
  }
}
