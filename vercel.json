{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": "vite",
  "rewrites": [
    { 
      "source": "/api/test", 
      "destination": "/api/test" 
    },
    { 
      "source": "/api/hubla-test", 
      "destination": "/api/hubla-api?operation=test" 
    },
    { 
      "source": "/api/hubla-test-all", 
      "destination": "/api/hubla-api?operation=test-all" 
    },
    { 
      "source": "/api/hubla-create-customer", 
      "destination": "/api/hubla-api?operation=create-customer" 
    },
    { 
      "source": "/api/hubla-create-subscription", 
      "destination": "/api/hubla-api?operation=create-subscription" 
    },
    { 
      "source": "/api/hubla-webhook", 
      "destination": "/api/hubla-api?operation=webhook" 
    },
    { 
      "source": "/api/hubla-subscription-details", 
      "destination": "/api/hubla-api?operation=subscription-details" 
    },
    { 
      "source": "/api/hubla-cancel-subscription", 
      "destination": "/api/hubla-api?operation=cancel-subscription" 
    },
    { 
      "source": "/api/((?!test|hubla-api).*)", 
      "destination": "https://backendapi-production-36b5.up.railway.app/api/$1" 
    },
    {
      "source": "/historico/(.*)",
      "destination": "/index.html"
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "HUBLA_API_KEY": "rEJhmsB0XT50fDtH1Fs1q2r6uIVv83QKAROMqVhjQusXCkAeYybTWfC5H3N7cl3O"
  }
}
