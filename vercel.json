{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": "vite",
  "rewrites": [
    { 
      "source": "/api/asaas-webhook", 
      "destination": "/backend/api/payment/asaas-webhook.js" 
    },
    { 
      "source": "/api/asaas-create-customer", 
      "destination": "/backend/api/payment/asaas-create-customer.js" 
    },
    { 
      "source": "/api/asaas-create-subscription", 
      "destination": "/backend/api/payment/asaas-create-subscription.js" 
    },
    { 
      "source": "/api/((?!asaas-webhook|asaas-create-customer|asaas-create-subscription).*)", 
      "destination": "https://backendapi-production-36b5.up.railway.app/api/$1" 
    },
    {
      "source": "/historico/(.*)",
      "destination": "/index.html"
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html"
    }
  ],
  "cleanUrls": true,
  "env": {
    "NODE_ENV": "production"
  }
}
