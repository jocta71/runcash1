{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": [
      "**/*.py",
      "requirements.txt",
      "Dockerfile"
    ],
    "dockerfilePath": "backend-scraper.Dockerfile",
    "rootDirectory": "backend/scraper"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "python run_real_scraper.py"
  }
} 