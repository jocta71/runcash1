# Porta do servidor (padrão: 3000)
PORT=3000

# Ambiente (production/development)
NODE_ENV=production

# MongoDB URI (obrigatório)
MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/nome_database

# Nome da coleção principal (padrão: roleta_numeros)
COLLECTION_NAME=roleta_numeros

# Origens permitidas para CORS (separadas por vírgula)
# Exemplo: https://meusite.com,https://api.meusite.com
# Se não definido, permite todas as origens (*)
ALLOWED_ORIGINS=https://meusite.com 