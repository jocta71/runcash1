# Configurações do servidor
PORT=3030
HOST=0.0.0.0

# Configurações da Asaas
ASAAS_API_URL=https://api.asaas.com/v3
ASAAS_API_KEY=seu_token_de_acesso_asaas
ASAAS_WEBHOOK_TOKEN=token_para_validacao_do_webhook
ASAAS_SANDBOX=true

# Configurações de segurança
VALIDATE_TOKEN=true
VALIDATE_IP=false
ALLOWED_IPS=127.0.0.1,::1

# Configurações de logging
LOG_LEVEL=info
LOG_DIR=./logs
CONSOLE_LOGGING=true
FILE_LOGGING=true
LOG_FILENAME=webhook-server.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5 