{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "watchPatterns": [
      "backend/scraper/**/*.py",
      "backend/scraper/requirements.txt"
    ],
    "buildCommand": "cd backend/scraper && pip install -r requirements.txt"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "cd backend/scraper && python run_real_scraper.py"
  }
} 