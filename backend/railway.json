{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "**/*.js",
      "package.json"
    ],
    "buildCommand": "npm install && cp websocket_server.js /app/ || true"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "node find_websocket.js && node /app/websocket_server.js || node websocket_server.js"
  }
} 